    <span class="navbar-toggler-icon"></span> 
<%= image_tag('photo.png', :alt => 'Hotels', :size => '30x30', :class => 'd-inline-block align-top') %>
  </button>
  <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
    <a class="navbar-brand" href="index">
<%= image_tag('photo.png', :alt => 'Hotels', :size => '30x30', :class => 'd-inline-block align-top') %>
FIT Hotels</a>
    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
      <li class="nav-item active">
        <a class="nav-link" href="index">Home <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="about">About</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="contactus">Contact Us</a>
      </li>
    </ul>
    <ul class="navbar-nav ml-auto my-2 my-lg-0">
<li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= icon('sign-in') %> Book Hotel
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <a class="dropdown-item" href="#signinModal" data-toggle="modal"><%= icon('sign-in') %> Sign In</a>
          <a class="dropdown-item" href="#signupModal" data-toggle="modal"><%= icon('plus') %> Sign Up</a>
      </li>
    </ul>
  </div>
</nav>
<div class="jumbotron jumbotron-fluid">
  <div class="container-fluid text-center text-primary">
    <h3 class="display-3">FIT Hotels Application</h3>
    <p class="lead text-secondary">This is a Main Project Running on Ruby, and Amazon cloud services</p>
  </div>
</div>
<div id="homeCarousel" class="carousel slide" data-ride="carousel">
<ol class="carousel-indicators">
    <li data-target="#homeCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#homeCarousel" data-slide-to="1"></li>
    <li data-target="#homeCarousel" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag('car1.jpg', :class => 'd-block w-100 car-img', :alt => 'Hotel 1') %>
<div class="carousel-caption d-none d-md-block">
    <h3 class="text-primary">Hotel 1</h3>
    </div>
</div>
    <div class="carousel-item">
      <%= image_tag('car2.jpg', :class => 'd-block w-100 car-img', :alt => 'Hotel 2') %>
<div class="carousel-caption d-none d-md-block">
    <h3 class="text-primary">Hotel 2</h3>
    </div>
    </div>
    <div class="carousel-item">
            <%= image_tag('car3.jpg', :class => 'd-block w-100 car-img', :alt => 'Hotel 3') %>
<div class="carousel-caption d-none d-md-block">
    <h3 class="text-primary">Hotel 3</h3>
    </div>
    </div>
  </div>
<a class="carousel-control-prev" href="#homeCarousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#homeCarousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<!--  Sign In Modal  -->
<div class="modal fade bd-example-modal-sm" id="signinModal" tabindex="-1" role="dialog" aria-labelledby="SignInModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <%= form_tag('/loginpost', method:'post' ) do %>
    <div class="modal-content">
      <div class="modal-header bg-primary">
        <h5 class="modal-title">Sign In</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">   
	<div class="text-danger"><%= @loginErrorMsg %></div>            
          <div class="form-group">
            <label for="signinEmail">Email address</label>
	    <%= email_field_tag 'signin_email',nil, class:'form-control', placeholder:'Email Id' , required:true %>
          </div>
          <div class="form-group">
            <label for="signinPassword">Password</label>            
	    <%= password_field_tag 'signin_password',nil, class:'form-control', placeholder:'Password' , required:true %>   
          </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary"><%= icon('sign-in') %> Sign In</button>
      </div>
    </div>
    <% end %>
  </div>
</div>
<!-- End of Sign In Modal -->

<!--  Sign Up Modal  -->
<div class="modal fade bd-example-modal-lg" id="signupModal" tabindex="-1" role="dialog" aria-labelledby="signupModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">

<%= form_tag('/regpost', method:'post' ) do %>
    <div class="modal-content">
      <div class="modal-header bg-primary">
        <h5 class="modal-title">Sign Up</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body"> 
	<div class="text-danger"><%= @regErrorMsg %></div>       
	<div class="form-group row">
	    <label for="signup_fname" class="col-sm-2 col-form-label">First Name</label>
	    <div class="col-sm-10">
              <%= text_field_tag 'signup_fname',nil, class:'form-control', placeholder:'First Name' , required:true %>
	    </div>
	    </div>
	<div class="form-group row">
	    <label for="signup_lname" class="col-sm-2 col-form-label">Last Name</label>
	    <div class="col-sm-10">
		<%= text_field_tag 'signup_lname',nil, class:'form-control', placeholder:'Last Name' , required:true %>
	    </div>
	</div>
	<div class="form-group row">
	    <label for="signup_email" class="col-sm-2 col-form-label">Email</label>
	    <div class="col-sm-10">
		<%= email_field_tag 'signup_email',nil, class:'form-control', placeholder:'Email Id' , required:true ,'aria-describedby':'emailHelpBlock' %>
	    </div>
	</div>
  <div class="form-group row">
    <label for="signup_password" class="col-sm-2 col-form-label">Password</label>
<div class="col-sm-10">
<%= password_field_tag 'signup_password',nil, class:'form-control', placeholder:'Password' , required:true %>   
</div>
  </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary"><%= icon('plus') %> Sign Up</button>
      </div>
    </div>
<% end %>
  </div>
</div>
<!-- End of Sign Up Modal -->

<script>
window.onload = function () { 

<% if @showRegModal %>
$('#signupModal').modal('show');  
<% end %>

<% if @showLoginModal %>
$('#signinModal').modal('show');  
<% end %>

};

</script>
</body>
</html>
